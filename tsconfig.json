{
  "compilerOptions": {
    "target": "es5",
    "typeRoots": [
      "./@types"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "importHelpers": true,
    "outDir": "./dist",
    "sourceMap": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "./src/**/*",
    "index.tsx",
    "App.tsx"
  ]
}
